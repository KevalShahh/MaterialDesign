<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Chips">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal">
    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:chipSpacingHorizontal="20dp"
        app:singleSelection="false"
        >
    <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chip_1"
        android:text="chip 1"
        android:checked="true"
        style="@style/Widget.MaterialComponents.Chip.Entry"
        app:chipIcon="@drawable/ic_baseline_favorite_24"
        app:closeIcon="@drawable/ic_baseline_cancel_24"
        app:checkedIcon="@drawable/ic_baseline_check_24"
        />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chip_2"
            android:text="chip 2"
            app:chipIcon="@drawable/ic_baseline_add_24"
            app:closeIcon="@drawable/ic_baseline_cancel_24"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chip_3"
            android:text="chip 3"
            app:chipIcon="@drawable/ic_baseline_filter_list_24"
            app:closeIcon="@drawable/ic_baseline_cancel_24"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chip_4"
            android:text="chip 4"
            app:chipIcon="@drawable/ic_baseline_search_24"
            app:closeIcon="@drawable/ic_baseline_cancel_24"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chip_5"
            android:text="chip 5"
            app:chipIcon="@drawable/ic_baseline_keyboard_arrow_up_24"
            app:closeIcon="@drawable/ic_baseline_cancel_24"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            />
    </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        app:chipIcon="@drawable/ic_baseline_keyboard_arrow_up_24"
        android:text="add"
        android:checked="true"
        app:checkedIcon="@drawable/ic_baseline_check_24"
        />
    <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        app:chipIcon="@drawable/ic_baseline_keyboard_arrow_up_24"
        android:text="delete"
        app:checkedIcon="@drawable/ic_baseline_check_24"
        />
    <!--<androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal"
        android:id="@+id/edittext"
        />-->
</LinearLayout>